<div class="jumbotron jumbotron-fluid">
  <div class="container-fluid">
    <h2 class="display-1 text-center"> <strong>&Bopf;&oopf;&oopf;&kopf;&sopf;</strong></h2>

    <div class="row justify-content-center">
    <table class="table table-bordered table-responsive w-auto">
    <thead>
      <tr>
        <th>No.</th>
        <th>Read?</th>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody border="1" >
      <% @books.each do |book| %>
        <tr>
          <td></td>
          <td><%= book.read %></td>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.genre %></td>
          <td><%= link_to 'Show Book Details', book_path(book) %></td>
          <td><%= link_to 'Edit Details', edit_book_path(book) %></td>
          <td><%= link_to 'Delete from List', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
    </div>

  <br>
      <h3 class="text-center">
        <%= link_to '= Add New Book =', new_book_path %></h3>
  </div>
</div>
